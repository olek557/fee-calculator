{
  "extends": ["airbnb-base", "plugin:prettier/recommended", "plugin:node/recommended"],
  "env": {
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".json"]
      }
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "no-process-exit": "off",
    "import/no-extraneous-dependencies": ["error"]
  },
  "parserOptions": {
    "ecmaVersion": 2020
  }
}
